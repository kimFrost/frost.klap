extends ../master


block append head

block append body

block append content

	section.container.container--fullscreen.container--fill
		div.container__content
			div.container__inner Intro

	section.container
		div.container__content
			div.container__inner
				div.slides(data-ng-controller="SlidesCtrl as slides" data-ng-slides="5", data-slides-autoplay="true")
					div.slides__cutter
						div.slides__list(data-ng-style="slides.css")
							//div.slides__slide(style="background-image: url('http://placehold.it/1500x500')")
							div.slides__slide
								img(src="http://placehold.it/1500x500")
							div.slides__slide
								img(src="http://placehold.it/1500x500")
							div.slides__slide
								img(src="http://placehold.it/1500x500")
							div.slides__slide
								img(src="http://placehold.it/1500x500")
							div.slides__slide
								img(src="http://placehold.it/1500x500")
					div.slides__map
						div.slides__mapitem(data-ng-click="slides.switchSlide(0, true)", data-ng-class="{'slides__mapitem--active': slides.checkActive(0)}")
						div.slides__mapitem(data-ng-click="slides.switchSlide(1, true)", data-ng-class="{'slides__mapitem--active': slides.checkActive(1)}")
						div.slides__mapitem(data-ng-click="slides.switchSlide(2, true)", data-ng-class="{'slides__mapitem--active': slides.checkActive(2)}")
						div.slides__mapitem(data-ng-click="slides.switchSlide(3, true)", data-ng-class="{'slides__mapitem--active': slides.checkActive(3)}")
						div.slides__mapitem(data-ng-click="slides.switchSlide(4, true)", data-ng-class="{'slides__mapitem--active': slides.checkActive(4)}")

	section.container
		div.container__content
			div.container__inner
				div.tiles
					- for (var i = 0; i < 16; ++i) {
						a.tiles__tile
							div.tiles__overlay overlay
							div.tiles__inner
								img(src="http://placehold.it/450x338")
							div.tiles__inner #{i}
					- }

	section.container
		div.container__content
			div.container__inner Our services

	section.container
		div.container__content
			div.container__inner Contact Klap
