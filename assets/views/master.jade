doctype html
html(data-ng-app="noerd.Klap", lang="da")
	head
		title Klap
		meta(charset="UTF-8")
		//meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1 user-scalable=no")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel='stylesheet', href='./css/main.css')
		link(rel='stylesheet', href='http://fast.fonts.net/cssapi/3b2e6dd0-e910-423a-b15e-9ccfcadb3d28.css')
		// Main app js
		script(src="/assets/bower_components/angular/angular.js")

		block head
		// Fonts

	body.klap(data-ng-controller="MainCtrl as main")

		div.klap__logo
		header.klap__header
			div.klap__menutoggle(data-ng-click="main.toggleMenu()")
				div.justy(data-ng-class="{'justy--active':main.states.showMenu}")

		div.klap__overlay(data-ng-class="{'klap__overlay--show':main.states.showMenu}")
			div.klap__menu
				div.klap__menuitem Intro
				div.klap__menuitem Who we are
				div.klap__menuitem Cases
				div.klap__menuitem Contact

		block body

		block glovalVars

		block content



		script(src="/assets/scripts/app.js")
		script(src="/assets/scripts/controllers/main.controller.js")
		script(src="/assets/scripts/controllers/slides.controller.js")
